{
  "name": "@lingui/ui",
  "version": "1.0.0",
  "description": "A modern, feature-rich React UI component library with beautiful animations and themes",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
