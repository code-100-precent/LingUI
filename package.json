    "typescript",
    "tailwindcss",
    "framer-motion",
    "component-library",
    "ui-library"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lingui.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lingui/issues"
  },
  "homepage": "https://github.com/yourusername/lingui#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "crypto-js": "^4.2.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.344.0",
    "tailwind-merge": "^2.2.0"
