    "autoprefixer": "^10.4.16",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "lottie-web": "^5.12.2",
    "react-intersection-observer": "^9.5.3"
  }
